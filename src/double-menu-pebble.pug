//- Double menu
//- ====================

//- Используем стандартный шаблон Project
extends ./template/base_layout

block variables
    - var file_name = 'double-menu-pebble';
    - var pebbles = true;
    - var aurinko = false;

//- Модифицируем head
block head
    - var pageTitle = 'Double menu pebble';
    - var pebbles = true;
    link(rel="apple-touch-icon" sizes="76x76" href=".././images/favicon/pebbles/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href=".././images/favicon/pebbles/ofavicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href=".././images/favicon/pebbles/favicon-16x16.png")
    link(rel="manifest" href=".././images/favicon/pebbles/site.webmanifest")
    link(rel="mask-icon" href=".././images/favicon/pebbles/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#ffffff")
    meta(name="theme-color" content="#ffffff")
    title Contact Us | Pebbles
    meta(name="description" content="Contact us to learn more about Pebbles and how it can help you to  manage development and delivery of products in Slack.")
//- Выводим content
//- Выводим content
block content
    include section/ui-kit/drop-down.pug
    include section/ui-kit/form.pug
    include section/ui-kit/input.pug
    include section/ui-kit/title.pug

    .b-container
        +b.wrap-blocks.--bouble-menu
            +e('div').width-6.--bouble-menu
                +title('h1', 'Contact us!').--h1.--bouble-menu.--bouble-menu-pebble
                +e('p').text Whether you have a&nbsp;quick question or&nbsp;would like to&nbsp;chat with&nbsp;us about how we&nbsp;can help your team, we&rsquo;d love to&nbsp;hear from you. Enter your info below and we&rsquo;ll get back to&nbsp;you shortly.
            +e('div').width-6.--bouble-menu-bottom
                +form({action: '/json/mail.php'}).js-validate.js-ajax
                    +input({
                        id: 'id-form',
                        type: 'hidden',
                        name: 'form',
                        value: 'Pebbles'
                    })
                    +input({
                        id: 'id-text',
                        type: 'text',
                        name: 'name',
                        text: 'Name'
                    })(required)
                    +input({
                        id: 'id-email',
                        type: 'email',
                        name: 'email',
                        text: 'Work Email Address'
                    })(required)
                    +input({
                        id: 'id-message',
                        type: 'textarea',
                        name: 'message',
                        placeholder: 'Message',
                        textarea: true,
                        text: 'Message'
                    }).--pebble.--area
                    +input({
                        id: 'id-submit',
                        type: 'submit',
                        name: 'submit',
                        value: 'SUBMIT'
                    }).--submit